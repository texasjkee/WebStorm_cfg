{
    "files.autoSave": "onFocusChange",
    "editor.fontSize": 20,
    "editor.lineNumbers": "relative",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.tabs.enabled": false,
    "editor.rulers": [ {"column": 80, "color": "#787c99" } ],
    "breadcrumbs.enabled": false,
    "editor.minimap.scale": 2,
    "editor.minimap.autohide": true,
    "editor.guides.indentation": false, //lines inside functions
    "editor.lightbulb.enabled": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    "workbench.tree.renderIndentGuides": "none",   
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "editor.linkedEditing": true,
    "explorer.compactFolders": false, 
    "workbench.statusBar.visible": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.tips.enabled": false,
    
    //Theme
    "workbench.colorTheme": "Tokyo Night",

    //Extensions
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "apc.stylesheet": {
        ".monaco-workbench .part.panel.bottom .composite.title": "height: 0"
        // ".monaco-action-bar .actions-container": "display: none", //explorer 
    },
    "workbench.startupEditor": "none"
}
