{
  "files.autoSave": "onFocusChange",
  "breadcrumbs.enabled": false,
  "editor.fontSize": 20,
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "none",
  "editor.rulers": [
    {
      "column": 80,
      "color": "#787c99"
    }
  ],
  "editor.minimap.scale": 2,
  "editor.minimap.autohide": true,
  "editor.guides.indentation": false, //lines inside functions
  "editor.lightbulb.enabled": "off",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.smoothScrolling": true,
  "editor.linkedEditing": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tips.enabled": false,
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 20,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  //Neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  //Customize
  "apc.stylesheet": {
    ".monaco-workbench .part>.title>.title-actions .action-label": "display: none", //workspace sidebar
    ".monaco-workbench.nomaineditorarea .part.panel.bottom .composite.title": "display: none" //terminal
  },
  //Turbo console
  "turboConsoleLog.logMessagePrefix": "",
  //Theme
  "workbench.colorTheme": "Tokyo Night",
  "workbench.iconTheme": "material-icon-theme",
  "editor.inlayHints.enabled": "off",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.tabs.enabled": false,
  "git.enableSmartCommit": true,
  "window.commandCenter": false,
  "editor.wordWrapColumn": 180,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 2,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "explorer.confirmPasteNative": false,
  "window.menuBarVisibility": "compact",
  "http.proxyAuthorization": null,
  "workbench.activityBar.location": "hidden"
}
